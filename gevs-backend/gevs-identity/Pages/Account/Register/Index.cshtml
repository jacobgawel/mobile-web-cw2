@page
@model gevs_identity.Pages.Account.Register.Index;

<div>
    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <h2 class="card-header">
                    Register
                </h2>
                <div class="card-body">
                    <form asp-page="/Account/Register/Index">
                        <input type="hidden" asp-for="Input.ReturnUrl" />

                        <div class="form-group">
                            <label asp-for="Input.FullName">Full Name</label>
                            <input class="form-control" placeholder="Full Name" asp-for="Input.FullName" autofocus>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Email">Email</label>
                            <input class="form-control" placeholder="Email" asp-for="Input.Email" autofocus>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.UniqueVoterCode">Unique Voter Code</label>
                            <input class="form-control" placeholder="UVC" asp-for="Input.UniqueVoterCode" autofocus>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Password">Password</label>
                            <input type="password" class="form-control" placeholder="Password" asp-for="Input.Password" autocomplete="off">
                        </div>

                        <div class="form-group">
                            <label for="DateOfBirth">Date of Birth</label>
                            <input type="date" class="form-control" id="DateOfBirth" name="Input.DateOfBirth" autocomplete="off">
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Constituency">Constituency Select</label>
                            <select class="form-select" aria-label="Constituency Select" asp-for="Input.Constituency">
                                <option selected>Open this select menu</option>
                                <option value="Shangri-la-Town">Shangri-la-Town</option>
                                <option value="Northern-Kunlun-Mountain">Northern-Kunlun-Mountain</option>
                                <option value="Western-Shangri-la">Western-Shangri-la</option>
                                <option value="Naboo-Vallery">Naboo-Vallery</option>
                                <option value="New-Felucia">New-Felucia</option>
                            </select>
                        </div>

                        <a class="pb-2 d-block" asp-page="../Login/Index" asp-route-returnUrl="@Model.Input.ReturnUrl">
                            Already registered? Login here
                        </a>

                        <button class="btn btn-primary" name="Input.Button" value="register">Register</button>
                        <button class="btn btn-secondary" name="Input.Button" value="cancel">Cancel</button>

                    </form>


                    @if (Model.RegisterSuccess)
                    {
                        <div class="alert alert-success mt-2">
                            <strong>Successfully registered</strong> - You can now login
                        </div>
                    }
                    @if (Model.RegisterWarning)
                    {
                        <div class="alert alert-warning mt-2">
                            <ul>
                                @if (Model.WarningMessage != null)
                                {
                                    @Model.WarningMessage
                                }
                                @foreach (var error in Model.RegisterError)
                                {
                                    <li>@error.Description</li>
                                }
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
